{
  "family": "showcase-prod-web",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "PLACEHOLDER_EXECUTION_ROLE_ARN",
  "taskRoleArn": "PLACEHOLDER_TASK_ROLE_ARN",
  "containerDefinitions": [
    {
      "name": "showcase-web",
      "image": "PLACEHOLDER_IMAGE",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 80,
          "protocol": "tcp"
        }
      ],
      "environment": [
        { "name": "APP_ENV", "value": "production" },
        { "name": "CDN_STATIC_URL", "value": "https://movieposterexchange.com" }
      ],
      "secrets": [
        { "name": "DB_SERVER", "valueFrom": "arn:aws:ssm:us-east-1:ACCOUNT_ID:parameter/showcase/prod/DB_SERVER" },
        { "name": "DB_NAME", "valueFrom": "arn:aws:ssm:us-east-1:ACCOUNT_ID:parameter/showcase/prod/DB_NAME" },
        { "name": "DB_USER", "valueFrom": "arn:aws:ssm:us-east-1:ACCOUNT_ID:parameter/showcase/prod/DB_USER" },
        { "name": "DB_PASSWORD", "valueFrom": "arn:aws:ssm:us-east-1:ACCOUNT_ID:parameter/showcase/prod/DB_PASSWORD" }
      ],
      "mountPoints": [
        { "sourceVolume": "sessions", "containerPath": "/var/www/html/sessions" },
        { "sourceVolume": "poster-photo", "containerPath": "/var/www/html/poster_photo" },
        { "sourceVolume": "templates-c", "containerPath": "/var/www/html/templates_c" },
        { "sourceVolume": "admin-templates-c", "containerPath": "/var/www/html/admin_templates_c" },
        { "sourceVolume": "bulkupload", "containerPath": "/var/www/html/bulkupload" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/showcase-prod-web",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "web"
        }
      }
    }
  ],
  "volumes": [
    {
      "name": "sessions",
      "efsVolumeConfiguration": {
        "fileSystemId": "PLACEHOLDER_EFS_ID",
        "transitEncryption": "ENABLED",
        "authorizationConfig": {
          "accessPointId": "PLACEHOLDER_SESSIONS_AP_ID",
          "iam": "ENABLED"
        }
      }
    },
    {
      "name": "poster-photo",
      "efsVolumeConfiguration": {
        "fileSystemId": "PLACEHOLDER_EFS_ID",
        "transitEncryption": "ENABLED",
        "authorizationConfig": {
          "accessPointId": "PLACEHOLDER_POSTER_AP_ID",
          "iam": "ENABLED"
        }
      }
    },
    {
      "name": "templates-c",
      "efsVolumeConfiguration": {
        "fileSystemId": "PLACEHOLDER_EFS_ID",
        "transitEncryption": "ENABLED",
        "authorizationConfig": {
          "accessPointId": "PLACEHOLDER_TEMPLATES_AP_ID",
          "iam": "ENABLED"
        }
      }
    },
    {
      "name": "admin-templates-c",
      "efsVolumeConfiguration": {
        "fileSystemId": "PLACEHOLDER_EFS_ID",
        "transitEncryption": "ENABLED",
        "authorizationConfig": {
          "accessPointId": "PLACEHOLDER_ADMIN_TEMPLATES_AP_ID",
          "iam": "ENABLED"
        }
      }
    },
    {
      "name": "bulkupload",
      "efsVolumeConfiguration": {
        "fileSystemId": "PLACEHOLDER_EFS_ID",
        "transitEncryption": "ENABLED",
        "authorizationConfig": {
          "accessPointId": "PLACEHOLDER_BULKUPLOAD_AP_ID",
          "iam": "ENABLED"
        }
      }
    }
  ]
}
