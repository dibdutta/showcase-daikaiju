{
  "family": "showcase-prod-web",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::940567657170:role/showcase-prod-ecs-execution",
  "taskRoleArn": "arn:aws:iam::940567657170:role/showcase-prod-ecs-task",
  "containerDefinitions": [
    {
      "name": "showcase-web",
      "image": "PLACEHOLDER_IMAGE",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 80,
          "protocol": "tcp"
        }
      ],
      "environment": [
        { "name": "APP_ENV", "value": "production" },
        { "name": "CDN_STATIC_URL", "value": "https://mygodzillashop.com" }
      ],
      "secrets": [
        { "name": "DB_SERVER", "valueFrom": "arn:aws:ssm:us-east-1:940567657170:parameter/showcase/prod/DB_SERVER" },
        { "name": "DB_NAME", "valueFrom": "arn:aws:ssm:us-east-1:940567657170:parameter/showcase/prod/DB_NAME" },
        { "name": "DB_USER", "valueFrom": "arn:aws:ssm:us-east-1:940567657170:parameter/showcase/prod/DB_USER" },
        { "name": "DB_PASSWORD", "valueFrom": "arn:aws:ssm:us-east-1:940567657170:parameter/showcase/prod/DB_PASSWORD" }
      ],
      "mountPoints": [
        { "sourceVolume": "sessions", "containerPath": "/var/www/html/sessions" },
        { "sourceVolume": "poster-photo", "containerPath": "/var/www/html/poster_photo" },
        { "sourceVolume": "templates-c", "containerPath": "/var/www/html/templates_c" },
        { "sourceVolume": "admin-templates-c", "containerPath": "/var/www/html/admin_templates_c" },
        { "sourceVolume": "bulkupload", "containerPath": "/var/www/html/bulkupload" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/showcase-prod-web",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "web"
        }
      }
    }
  ],
  "volumes": [
    {
      "name": "sessions",
      "efsVolumeConfiguration": {
        "fileSystemId": "fs-0255d26d582c5a49a",
        "transitEncryption": "ENABLED",
        "authorizationConfig": {
          "accessPointId": "fsap-0c9cdc9389c9c2119",
          "iam": "ENABLED"
        }
      }
    },
    {
      "name": "poster-photo",
      "efsVolumeConfiguration": {
        "fileSystemId": "fs-0255d26d582c5a49a",
        "transitEncryption": "ENABLED",
        "authorizationConfig": {
          "accessPointId": "fsap-01ac346e23600c0f7",
          "iam": "ENABLED"
        }
      }
    },
    {
      "name": "templates-c",
      "efsVolumeConfiguration": {
        "fileSystemId": "fs-0255d26d582c5a49a",
        "transitEncryption": "ENABLED",
        "authorizationConfig": {
          "accessPointId": "fsap-0bf2d475fe0469033",
          "iam": "ENABLED"
        }
      }
    },
    {
      "name": "admin-templates-c",
      "efsVolumeConfiguration": {
        "fileSystemId": "fs-0255d26d582c5a49a",
        "transitEncryption": "ENABLED",
        "authorizationConfig": {
          "accessPointId": "fsap-05db4070601ef0562",
          "iam": "ENABLED"
        }
      }
    },
    {
      "name": "bulkupload",
      "efsVolumeConfiguration": {
        "fileSystemId": "fs-0255d26d582c5a49a",
        "transitEncryption": "ENABLED",
        "authorizationConfig": {
          "accessPointId": "fsap-0c25c5f1dc05f81b6",
          "iam": "ENABLED"
        }
      }
    }
  ]
}
